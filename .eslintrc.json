{
    "extends": "google",
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "rules": {
        "linebreak-style": 0,
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-trailing-spaces": 0,
        "one-var": 0,
        "no-unused-vars": 1,
        "max-len": ["error", { "code": 150 }],
        "space-before-function-paren": ["error", {"anonymous": "always", "named": "never"}],
        "require-jsdoc": 0,
        "no-negated-condition": 0,
        "max-len": 0,
        "arrow-parens": 0,
        "brace-style": ["error", "stroustrup"],
        "no-loop-func": 0
    }
}
